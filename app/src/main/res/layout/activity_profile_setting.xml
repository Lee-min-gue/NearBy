<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ProfileSettingActivity">

    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="프로필 설정"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_btn"
        android:src="@drawable/stock_profile"
        app:layout_constraintEnd_toEndOf="@id/tv_profile_title"
        app:layout_constraintStart_toStartOf="@id/tv_profile_title"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_title" />

    <TextView
        android:id="@+id/tv_profile_pic"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppins_bold"
        android:text=" 사진 선택"
        app:layout_constraintEnd_toEndOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/img_profile" />

    <EditText
        android:id="@+id/et_profile_nickname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F2F2F2"
        android:hint="닉네임을 입력해주세요"
        android:paddingStart="20dp"
        android:textColorHint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_pic" />

    <TextView
        android:id="@+id/tv_nickname_have_to_check"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/firstColor"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="중복체크"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/et_profile_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_profile_nickname"
        app:layout_constraintTop_toTopOf="@id/et_profile_nickname" />

    <TextView
        android:id="@+id/tv_nickname_is_checked"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/lastColor"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="사용가능"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/et_profile_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_profile_nickname"
        app:layout_constraintTop_toTopOf="@id/et_profile_nickname" />


    <Button
        android:id="@+id/btn_check_finish"
        android:layout_width="0dp"
        android:layout_height="57.66dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/firstColor"
        android:text="완료"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>