<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_friend_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:src="@drawable/stock_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Kevin"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_friend_email"
        app:layout_constraintStart_toEndOf="@id/iv_friend_profile"
        app:layout_constraintTop_toTopOf="@id/iv_friend_profile" />

    <TextView
        android:id="@+id/tv_friend_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="test@gmail.com"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_profile"
        app:layout_constraintStart_toEndOf="@id/iv_friend_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_name" />


    <Button
        android:id="@+id/btn_follow"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_margin="35dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/firstColor"
        android:fontFamily="@font/poppins_bold"
        android:text="수락"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_friend_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_delete_request"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_margin="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/greyLine"
        android:fontFamily="@font/poppins_bold"
        android:text="거절"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>